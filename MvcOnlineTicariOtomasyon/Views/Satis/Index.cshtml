@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2> Satışlar </h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var x in Model)

    {
        <tr>
            <th>@x.SatisID</th>
            <th>@x.Urun.UrunAd</th>
            <th>@x.Cariler.CariAd @x.Cariler.CariSoyad</th>
            <th>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</th>
            <th>@x.Adet</th>
            <th>@x.Fiyat</th>
            <th>@x.ToplamTutar</th>
            <th>@x.Tarih</th>
            <td><a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@x.SatisID" class="btn btn-default" style="background-color:lightcoral ; color:white">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>


