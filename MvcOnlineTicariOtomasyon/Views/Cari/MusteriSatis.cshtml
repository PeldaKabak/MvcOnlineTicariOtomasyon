@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2> Cari Satışları </h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.cariAd</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var x in Model)

    {
        <tr>
            <th>@x.SatisID</th>
            <th>@x.Urun.UrunAd</th>
            <th>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</th>
            <th>@x.Fiyat</th>
            <th>@x.Adet</th>
            <th>@x.ToplamTutar</th>
            <th><a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></th>
        </tr>
    }
</table>
